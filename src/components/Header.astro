---
interface Header {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Header</title>
  </head><header class="bg-slate-900 bg-transparent">
    <div>
      <h1
        class="text-center text-white font-mono font-bold text-pretty text-xl"
      >
        {title}
      </h1>
      <h3 class="text-center text-white">{description}</h3>
    </div>

    
  </header>

  <body>
    <slot />
  </body>

</html>
