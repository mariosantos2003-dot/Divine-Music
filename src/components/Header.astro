---
interface Header {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Header</title>
  <style>

    @font-face {
      font-family: 'TirelesslyLoveYou';
      src: url('../images/fonts/TirelesslyLoveYou.otf');
    }
    body {
      margin: 0;
      overflow-x: hidden; /* Evita la barra de desplazamiento horizontal */
    }
    header {
      background-color:black;
      color: #fff;
      padding: 20px 0;
      transition: all 0.5s ease-in;
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
      text-align: center;
      font-size: 200px;
      display: block;
      font-family: 'TirelesslyLoveYou';
    }
    .small {
      padding: 10px 0;
      font-size: 18px;
    }
    .content {
      padding: 20px;
    }
  </style>
</head>
<body>
  <header id="header">
    <div>
      <h1>{title}</h1>
      <h3>{description}</h3>
    </div>
  </header>

  <div class="content">
    <!-- Your page content goes here -->
    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero. Sed cursus ante dapibus diam. Sed nisi.</p>
    <!-- Add more content as needed -->
  </div>

  <script>
 window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  const header = document.getElementById("header") as HTMLElement;
  const content = document.getElementsByClassName("content")[0] as HTMLElement;

  if (document.body.scrollTop > 50 || document.documentElement.scrollTop > 50) {
    header.classList.add("small");
    content.style.marginTop = "80px"; // Ajusta seg√∫n la altura del header
  } else {
    header.classList.remove("small");
    content.style.marginTop = "0";
  }
}

  </script>
</body>
</html>
