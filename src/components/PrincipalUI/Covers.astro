---
interface Covers {
  title: String;
  price: String;
  url: String;
}

const { title, price, url } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Covers</title>
    <style>
      @font-face {
        font-family: "TirelesslyLoveYou";
        src: url("../images/fonts/TirelesslyLoveYou.otf");
      }
      .cover-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        margin-top: 200px;
        object-fit: contain;
        border-radius: 0.75rem;
        max-width: 100%;
        max-height: 100%;
      }

      .cover-container img {
        transition: transform 0.3s ease-in-out;
        border-radius: 1%;
      }
      .cover-container img:hover {
        transform: scale(1.05);
      }
      .cover-info {
        text-align: center;
        justify-content: center;
        transition: transform 0.2s;
      }

      .cover-info h1 {
        color: white;
        font-size: 1.5rem;
        margin-bottom: 10px;
        align-items: center;
      }

      .cover-info button {
        display: inline-block;
        padding: 8px 20px;

        color: white;
        border-radius: 20px;
        text-decoration: none;
        transition: background-color 0.3s ease;
      }

    
    </style>
  </head>
  <body>
    <section>
      <div class="cover-container">
        <img src={url} alt="Cover Number" />
      </div>
      <div class="cover-info">
        <h1 class="pt-10">{title}</h1>
        <h2><span>{price}</span></h2>
        <a href="#" class="">Add to cart</a>
      </div>
    </section>
    <slot />
  </body>
</html>
