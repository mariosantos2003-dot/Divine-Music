---
import Layout from "../layouts/Layout.astro";
import Covers from "../components/Covers.astro";
import Header from "../components/Header.astro";
import Sections from "../components/Sections.astro";
import Footer from "../components/Footer.astro";
import SideLetters from "../components/SideLetters.astro";
import Countdown from "../components/Countdown.astro";
---

<Layout title="Divine">
  <Header title="Divine" description="The Album of your dreams" />

  <main class="relative">
    <!-- Video de fondo -->
    <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover z-0">
      <source src="src/images/videobg/bg.mp4" type="video/mp4" />
    </video>

    <article>
      <section class="gap-5">
        <Covers
          title="Paradise"
          price="12.99"
          url="/src/images/covers/cover_inferno.webp"
        />
  
      </section>
      <Countdown/>
      <section>
        <Covers
          title="Purgatory"
          price="12.99"
          url="/src/images/covers/cover_purgatory.webp"
        />
      </section>
      <Countdown/>
      <section>
        <Covers
          title="Inferno"
          price="12.99"
          url="/src/images/covers/cover_paradise.webp"
        />
      </section>
      <Countdown/>

      <section>
      <div class="text-center grid grid-flow-col gap-4 pt-10 text-white">
        <Sections section="Live" link="/Live" />
        <Sections section="Merch" link="/Merch" />
        <Sections section="Updates" />
      </div>
    </section>
    </article>


  </div>
  </main>

  <footer >
    <Footer />
  </footer>
</Layout>
