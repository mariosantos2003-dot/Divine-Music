---
import Layout from "../layouts/Layout.astro";
import Covers from "../components/Covers.astro";
import Header from "../components/Header.astro";
import Sections from "../components/Sections.astro";
import Footer from "../components/Footer.astro";
import MerchItems from "../components/MerchItems.astro";
---

<Layout title="Divine">
  <Header title="Divine" description="The Album of your dreams" />
  <main class="flex justify-center">
    <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover z-0">
      <source src="src/images/videobg/bg.mp4" type="video/mp4" />
    </video>
    <section class="mt-8">
      <div class="grid grid-cols-2 gap-4 gap-y-2 mb-2">
        <MerchItems
          nameItem="Hoodie 1"
          price="49.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Hoodie 2"
          price="49.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Tee  1"
          price="29.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Tee  2"
          price="29.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Cap  1"
          price="19.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Cap  2"
          price="19.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />
      </div>
    </section>
  </main>
  <footer class="sticky">
    <Footer />
  </footer>
</Layout>
