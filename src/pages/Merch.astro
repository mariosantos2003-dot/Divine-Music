---
import Layout from "../layouts/Layout.astro";
import Covers from "../components/Covers.astro";
import Header from "../components/Header.astro";
import Sections from "../components/Sections.astro";
import Footer from "../components/Footer.astro";
import MerchItems from "../components/MerchItems.astro";
import SmokeBackground from "../components/SmokeBackground.astro";
import PostHeader from "../components/Header.astro";
---

<Layout title="Divine">
<PostHeader
    section1="Home"
    section2="Live"
    link1="/"
    link2="/Live"
    link3="/"
    />

<main class="flex justify-center">
    <SmokeBackground/>
    <section class="mt-8">
      <div class="grid grid-cols-2 gap-4 gap-y-2 mb-2">
        <MerchItems
          nameItem="Hoodie 1"
          price="49.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Hoodie 2"
          price="49.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Tee  1"
          price="29.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Tee  2"
          price="29.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Cap  1"
          price="19.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />

        <MerchItems
          nameItem="Cap  2"
          price="19.99"
          url="src/images/merch/hoodie/hodietest1.webp"
          class="-mt-2"
        />
      </div>
    </section>
  </main>
  <footer class="sticky">
    <Footer />
  </footer>
</Layout>
